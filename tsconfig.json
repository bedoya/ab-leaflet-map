{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests/**/*",
    "examples",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}